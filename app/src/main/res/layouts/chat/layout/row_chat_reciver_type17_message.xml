<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="" />

    <RelativeLayout
        android:id="@+id/rl_message_bg"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/T12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/type_seventeen_img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/type_seventeen_imgmb"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/store_commodity_soldout"
                        android:visibility="gone"/>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/type_seventeen_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/T8"
                    android:maxEms="18"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/type_seventeen_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:maxEms="18"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:singleLine="true"

                    android:layout_marginTop="3dp"
                    android:textColor="@color/T10"/>

                <TextView
                    android:id="@+id/type_seventeen_pv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:ellipsize="end"

                    android:singleLine="true"
                    android:textColor="@color/b11"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/type_seventeen_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/T6"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>

</LinearLayout>