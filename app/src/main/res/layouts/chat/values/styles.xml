<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <!-- 标题栏 聊天设置 样式 -->
    <style name="CTitleBarBgColorStylet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- 标题栏 左边返回按钮 不带文字 -->
    <style name="ChatTitleBarBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@drawable/default_text_click</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:drawableLeft">@drawable/btn_white_back</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 标题栏 右侧 图片或者文字 样式 不带文字 -->
    <style name="ChatTitleBarRightStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@drawable/default_text_click</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <!-- 标题栏 右侧 图片或者文字 样式 -->
    <style name="CGroupTitleBarRightStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@drawable/default_text_click</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <!-- 标题栏 右侧 图片或者文字 样式 -->
    <style name="CGroupTitleBarRightStyle100">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">100dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@drawable/default_text_click</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <!-- 标题栏 返回按钮 左侧白色图片 样式 -->
    <style name="TitleBarBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">@string/back</item>
        <item name="android:textColor">@drawable/default_text_click</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:drawableLeft">@drawable/btn_white_back</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <!--标题栏 标题文字 样式 -->
    <style name="TitleBarTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/T12</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- 标题栏 右侧 图片或者文字 样式 -->
    <style name="TitleBarRightStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@drawable/default_text_click</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <!-- 分割栏 样式 -->
    <style name="DividerStyle">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/d1</item>
    </style>

